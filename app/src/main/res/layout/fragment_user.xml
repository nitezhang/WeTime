<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.UserFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape_round_user" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_user"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        app:cardElevation="10dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="180dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/imageView"
                android:src="@drawable/icon_head"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:text="Nite"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:id="@+id/tv_name" />

            <TextView
                android:id="@+id/tv_username"
                android:text="你的时间  我来负责"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_margin="15dp" />

            <ImageView
                android:src="@drawable/icon_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_user"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_tomato_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:src="@drawable/icon_tomato_time"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="番茄时间"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/icon_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/layout_note_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:src="@drawable/icon_note_recycle"
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="垃圾箱"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/icon_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>

